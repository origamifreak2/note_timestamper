{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://note-timestamper.app/schemas/notes-embed.schema.json",
  "title": "Quill Embed Formats for Note Timestamper",
  "description": "Schema definitions for custom Quill timestamp and image embeds used in notes.html.",
  "type": "object",
  "additionalProperties": true,
  "definitions": {
    "TimestampValue": {
      "type": "object",
      "title": "TimestampValue",
      "additionalProperties": false,
      "required": ["ts", "label"],
      "properties": {
        "ts": { "type": "number", "minimum": 0, "description": "Timestamp in seconds." },
        "label": {
          "type": "string",
          "minLength": 1,
          "description": "Display label for the timestamp."
        }
      }
    },
    "ImageValueObject": {
      "type": "object",
      "title": "ImageValueObject",
      "additionalProperties": false,
      "required": ["src"],
      "properties": {
        "src": { "type": "string", "minLength": 1, "description": "Image source or data URL." },
        "width": { "type": "number", "minimum": 1 },
        "height": { "type": "number", "minimum": 1 },
        "fabricJSON": {
          "type": "string",
          "description": "Optional Fabric.js JSON for editable drawings."
        }
      }
    },
    "ImageValueString": {
      "type": "string",
      "title": "ImageValueString",
      "description": "String format: src|widthxheight",
      "pattern": "^.+\\|\\d+x\\d+$"
    },
    "ImageValue": {
      "anyOf": [
        { "$ref": "#/definitions/ImageValueObject" },
        { "$ref": "#/definitions/ImageValueString" }
      ]
    }
  }
}
